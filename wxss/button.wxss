/*
 * model-btn
 */

button::after {
  display: none;
}

.model-btn {
  width: 100%;
  color: #fff;
  line-height: 50px;
  font-size: 16px;
  text-align: center;
  background-color: #1EBF96;
  border-radius: 25px;
}
.model-btn.middle{
  line-height: 40px;
  border-radius: 20px;
}
.model-btn.small{
  line-height: 28px;
  font-size:12px;
  border-radius:14px;
}
.model-btn.active{
  background-color:#1AA682;
}
.model-btn.disabled{
  background-color:#1EBF96;
}

.model-btn.default {
  background-color:#f2f2f2;
  color: #333;
  border:1rpx solid #ccc;
}
.model-btn.plain{
  background-color:transparent;
  color: #999;
  border:1rpx solid #ccc;
}

.model-btn.default {
  background-color: #dfdfdf;
  color: #999;
}
.model-btn.clean{
  background-color:transparent;
  color:#333;
}