/*
 *样式重置 
 */

checkbox-group,textarea, input, label, picker, form, button, text, navigator, page, view,
view::before, view::after {
  box-sizing: border-box;
  line-height:1.618;
}
input {
  display:block;
  width:100%;
}
page {
  height: 100%;
  color: #333;
  background-color:#f2f3f4;
}
picker{
  line-height: 48px;
}
navigator:hover {
  opacity: 1;
}
navigator view, navigator text {
  pointer-events: none;
}