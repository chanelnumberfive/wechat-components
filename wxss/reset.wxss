/*
 *样式重置 
 */

textarea, input, label, picker, form, button, text, navigator, page, view,
view::before, view::after {
  box-sizing: border-box;
  line-height:1.618;
}
input {
  display:block;
  width:100%;
}
page {
  height: 100%;
  color: #333;
  background-color:#fafafa;
}
picker{
  line-height: 48px;
}
navigator:hover {
  opacity: 1;
}

input:placeholder {
  color: #ababab;
}

navigator view, navigator text {
  pointer-events: none;
}