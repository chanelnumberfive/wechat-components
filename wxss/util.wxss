/*
 * 通用样式
 */

.glb-mask, .glb-full-box, .glb-full-screen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  border: 0;
  background: transparent;
  z-index: 1000;
}

.glb-full-box {
  position: absolute;
}

.glb-mask {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: -1;
}

.glb-for-screen {
  position: absolute;
  top: 0;
  left: 0;
  clip-path: inset(0px 0px 99.9% 99.9%);
  overflow: hidden;
  height: 1px;
  width: 1px;
  padding: 0;
  border: 0;
  z-index: -1;
}