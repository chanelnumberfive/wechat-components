.model-loading {
  position: relative;
  box-sizing: border-box;
  flex-wrap: wrap;
  width: 90%;
  border-radius: 12rpx;
  margin: 30rpx auto;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 60rpx;
  text-align: center;
}

.loading-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1000;
  height: 1px;
  width: 100%;
  overflow: hidden;
}

.loading-bar {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 1px;
  background-color: #36c76e;
}

.loading-bar.complete {
  transform: translateX(100%);
  opacity: 0;
  transition: opacity 0.3s linear;
}

@keyframes loading {
  0% {
    transform: translateX(0%);
  }

  20% {
    transform: translateX(80%);
  }

  50% {
    transform: translateX(90%);
  }

  100% {
    transform: translateX(95%);
  }
}
.animation-loading {
  animation: 10s linear both loading;
}
