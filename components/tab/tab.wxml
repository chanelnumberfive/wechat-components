<view class="tab" style="{{css}}">
  <scroll-view wx:if="{{position==='top'}}" scroll-x="{{true}}">
    <view class="tab-nav">
      <view class="tab-nav-item {{currentPageIndex==index?'active':''}}" data-index="{{index}}" wx:for="{{items}}" wx:key="{{index}}" bindtap="tab">
        <view class="tab-nav-text">{{item}}</view>
      </view>
    </view>
  </scroll-view>

  <slot></slot>
  <view style="flex:1">
    <swiper style="height:calc(100vh - 50px);{{swiperCss}}" current="{{currentPageIndex}}" bindchange="change">
      <swiper-item wx:for="{{length||items}}" wx:key="{{index}}">
        <view style="height:100%;" scroll-y="true">
          <slot name="tab-{{index}}"></slot>
        </view>
      </swiper-item>
    </swiper>
  </view>

  <scroll-view wx:if="{{position==='bottom'}}" scroll-x="{{true}}">
    <view class="tab-nav">
      <view class="tab-nav-item {{currentPageIndex==index?'active':''}}" data-index="{{index}}" wx:for="{{items}}" wx:key="{{index}}" bindtap="tab">
        <view class="tab-nav-text">{{item}}</view>
      </view>
    </view>
  </scroll-view>
</view>