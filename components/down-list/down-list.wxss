/* pages/components/base/down-list/down-list.wxss */
.menu{
  position: relative;
  width:100%;
  min-height:60rpx;
  box-sizing: border-box;
}
.menu.up::after{
  transform:rotate(180deg)
}
.menu::after{
  content:'';
  position: absolute;
  right:30rpx;
  top:50%;
  margin-top:-6rpx;
  width:20rpx;
  height:12rpx;
  background-image:url(data:image/svg+xml;base64,);
  background-repeat:no-repeat;
  background-size:100% 100%;
}
.menu.disabled{
  pointer-events: none;
}
.menu.disabled::after{
  opacity: 0.6;
}
.list{
  width:100%;
  min-height:100rpx;
  height:auto;
}