.title {
  margin-bottom: 0.4em;
  font-size: 15px;
  color: #333;
}

.form-image-wrapper {
  display: flex;
  flex-wrap: wrap;
}

.form-image-wrapper-show {
  height: 58px;
  width: 58px;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}

.form-image {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  height: 58px;
  width: 58px;
  margin: 10rpx 20rpx 10rpx 0;
  border-radius: 2px;
  font-size: 40px;
  color: #999;
  background-size: cover;
  background-position: center center;
  background-color: #f0f0f0;
}

.form-image-wrapper-show+.form-image-wrapper-show {
  margin-left: 10px;
}

.form-image-text {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
  color: #fff;
  font-size: 14px;
  background-color: rgba(0, 0, 0, 0.6);
}

.form-image-delete {
  position: absolute;
  top: -4px;
  right: -4px;
  height: 20px;
  width: 20px;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 20rpx 20rpx;
  z-index: 15;
}

.add {
  height: 20px;
  width: 20px;
  background-image: url(data:image/svg+xml;base64,);
  background-size: 100% 100%;
}

